# LLM API Configuration
# Copy this file to .env and add your API keys

# OpenAI Configuration
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here
REACT_APP_OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude Configuration  
REACT_APP_ANTHROPIC_API_KEY=your_anthropic_api_key_here
REACT_APP_ANTHROPIC_MODEL=claude-3-haiku-20240307

# LLM Provider Selection (openai, anthropic, ollama, mock)
REACT_APP_LLM_PROVIDER=openai

# Ollama Configuration (for local LLM)
REACT_APP_OLLAMA_BASE_URL=http://localhost:11434
REACT_APP_OLLAMA_MODEL=llama2

# Generic API Configuration
REACT_APP_CUSTOM_LLM_URL=your_custom_api_endpoint
REACT_APP_CUSTOM_LLM_KEY=your_custom_api_key